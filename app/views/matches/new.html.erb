<div class="page-header">
  <h1>Add Match</h1>
</div>

<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_match" class="form-horizontal">
  <!-- Label and input for date_id -->
  <div class="form-group">
    <label for="date_id" class="col-sm-2 control-label">
      Date
    </label>
    <div class="col-sm-10">
      <input type="text" id="date_id" name="date_id" placeholder="Date" class="form-control" value="<%= @match.date_id %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @match.user_id %>">
    </div>
  </div>

  <!-- Label and input for accepted -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label for="accepted">
          <input type="checkbox" id="accepted" name="accepted" value="1" <%= "checked" if @match.accepted %>>
          Accepted
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Match" class="btn btn-primary">
    </div>
  </div>
</form>
