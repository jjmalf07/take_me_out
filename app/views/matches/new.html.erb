<div class="page-header">
  <h1>Create a Match</h1>
</div>

<div>
<p> Are you sure you want to choose this date? </p>
</div>

<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_match" class="form-horizontal">
  <!-- Label and input for date_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="userdate_id" name="userdate_id" placeholder="Date" class="form-control" value="<%= @match.userdate_id %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @match.user_id %>">
    </div>
  </div>

  <!-- Label and input for accepted -->
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label for="accepted">
          <input type="checkbox" id="accepted" name="accepted" value="1" <%= "checked" if @match.accepted %>>
          Accepted
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Match" class="btn btn-info">
    </div>
  </div>
</form>
