<div class="page-header">
  <h1>My Matches</h1>
</div>

<p><a href="/matches/new" class="btn btn-primary">Add a New Match</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Accepted</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date_id %></td>
        <td><%= match.user_id %></td>
        <td><%= match.accepted %></td>
        <td>
          <a href="/matches/<%= match.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/matches/<%= match.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_match/<%= match.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

