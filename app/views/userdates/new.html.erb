<div class="page-header">
  <h1>Add A New Date</h1>
</div>

<% if @userdate.errors.any? %>
  <% @userdate.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_userdate" class="form-horizontal">
  <!-- Label and input for interest -->
  <div class="form-group">
    <label for="interest" class="col-sm-2 control-label">
      Interest
    </label>
    <div class="col-sm-10">
      <select type="text" id="interest" name="interest" placeholder="Interest" class="form-control" value="<%= @userdate.interest %>">
        <option>Relationship</option>
        <option>Casual Dating</option>
        <option>Let's Have Some Fun ;)</option>
        <option>Meet New Friends</option>
      </select>
    </div>
  </div>

  <!-- Label and input for preference -->
  <div class="form-group">
    <label for="preference" class="col-sm-2 control-label">
      Preference
    </label>
    <div class="col-sm-10">
      <select type="text" id="preference" name="preference" placeholder="Preference" class="form-control" value="<%= @userdate.preference %>">
        <option>Men</option>
        <option>Women</option>
        <option>Either</option>
      </select>
    </div>
  </div>

  <!-- Label and input for age_range -->
  <div class="form-group">
    <label for="age_range" class="col-sm-2 control-label">
      Age range
    </label>
    <div class="col-sm-10">
      <input type="text" id="age_range" name="age_range" placeholder="Age range" class="form-control" value="<%= @userdate.age_range %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="<%= @userdate.user_id %>" class="form-control" value="<%= @userdate.user_id %>">
    </div>
  </div>

  <!-- Label and input for event_id -->
  <div class="form-group">
    <label for="event_id" class="col-sm-2 control-label">
      Event Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="event_id" name="event_id" placeholder="Game, concert, show, etc." class="form-control" value="<%= @userdate.event_id %>">
    </div>
  </div>

  <!-- Label and input for price -->
  <div class="form-group">
    <label for="price" class="col-sm-2 control-label">
      Price
    </label>
    <div class="col-sm-10">
      <input type="text" id="price" name="price" placeholder="If it's on you, then say free" class="form-control" value="<%= @userdate.price %>">
    </div>
  </div>

  <!-- Label and input for number_tickets -->
  <div class="form-group">
    <label for="number_tickets" class="col-sm-2 control-label">
      Number of tickets
    </label>
    <div class="col-sm-10">
      <input type="text" id="number_tickets" name="number_tickets" placeholder="How many tickets are available (for group events)?" class="form-control" value="<%= @userdate.number_tickets %>">
    </div>
  </div>

  <!-- Label and input for date_time -->
  <div class="form-group">
    <label for="date_time" class="col-sm-2 control-label">
      Event Date
    </label>
    <div class="col-sm-10">
      <input type="text" id="datepicker" name="date_time" placeholder="Event Date" class="form-control" value="<%= @userdate.date_time %>">
      <script type="text/javascript">
        jQuery('#datepicker').datepicker();
      </script>
    </div>
  </div>

  <!-- Label and input for details -->
  <div class="form-group">
    <label for="details" class="col-sm-2 control-label">
      Date Details
    </label>
    <div class="col-sm-10">
      <textarea id="details" name="details" placeholder="Date details, plans, meetup spot & time, etc." class="form-control" rows="3"><%= @userdate.details %></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Date" class="btn btn-primary">
    </div>
  </div>
</form>
