<div class="page-header">
  <h1>Date #<%= @userdate.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Interest</dt>
  <dd><%= @userdate.interest %></dd>

  <dt>Preference</dt>
  <dd><%= @userdate.preference %></dd>

  <dt>Host</dt>
  <dd><%= @userdate.user.email %></dd>

  <dt>Event</dt>
  <dd><%= @userdate.eventname %></dd>

  <dt>Price</dt>
  <dd><%= @userdate.price %></dd>

  <dt>Number tickets</dt>
  <dd><%= @userdate.number_tickets %></dd>

  <dt>Date</dt>
  <dd><%= @userdate.date_time %></dd>

  <dt>Details</dt>
  <dd><%= @userdate.details %></dd>

</dl>

<div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= link_to "Back", :back, :class => "btn btn-default" %>
    </div>
</div>

<div class="row">
  <p> </p>
</div>

<div class="form-group">
<ul>
  <% @userdate.comments.each do |comment| %>
    <li>
      <h4><%= comment.user.email %></h4>
      <p><%= comment.content %></p>
    </li>
  <% end %>
  <li>
    <form action="/create_comment">
      <textarea id="content" name="content" placeholder="Add your comment" class="form-control" rows="3"></textarea>

      <input type="hidden" id="userdate_id" name="userdate_id" value="<%= @userdate.id %>">

      <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

      <input type="submit" value="Create Comment" class="btn btn-primary">
    </form>
  </li>
</ul>
</div>
